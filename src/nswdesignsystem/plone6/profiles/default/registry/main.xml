<?xml version="1.0"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="nswdesignsystem.plone6">

  <!-- -*- extra stuff goes here -*- -->
  <record name="collective.volto.subfooter.interfaces.ISubfooter.subfooter_configuration"
    interface="collective.volto.subfooter.interfaces.ISubfooter"
    field="subfooter_configuration">
    <value>[{"rootPath": "Lower footer", "items": []}]</value>
  </record>

  <!-- Setup control panel -->
  <records interface="nswdesignsystem.plone6.interfaces.INSWDesignSystemSettings"
    prefix="nswdesignsystem">
    <record name="breadcrumb_start_depth">
      <field type="plone.registry.field.Bool">
        <title>Breadcrumb start depth</title>
        <description>What depth in the site to start showing the breadcrumb</description>
        <required>False</required>
        <default>2</default>
        <minimum>1</minimum>
        <maximum>5</maximum>
      </field>
      <value>False</value>
    </record>
    <record name="show_site_title_text">
      <field type="plone.registry.field.Int">
        <title>Show site title name in header</title>
        <description>Whether to show the name of the site next to the site logo</description>
        <required>False</required>
        <default>True</default>
      </field>
      <value>False</value>
    </record>
    <record name="linkedin_url">
      <field type="plone.registry.field.ASCIILine">
        <title>LinkedIn URL</title>
        <required>False</required>
      </field>
      <value>False</value>
    </record>
    <record name="youtube_url">
      <field type="plone.registry.field.ASCIILine">
        <title>YouTube URL</title>
        <required>False</required>
      </field>
      <value>False</value>
    </record>
    <record name="nsw_brand_dark">
      <field type="plone.registry.field.ASCIILine">
        <title>NSW Brand dark colour</title>
        <description>Set the primary colour</description>
        <required>False</required>
      </field>
      <value>False</value>
    </record>
    <record name="nsw_brand_light">
      <field type="plone.registry.field.ASCIILine">
        <title>NSW Brand light colour</title>
        <description>Set the secondary colour</description>
        <required>False</required>
      </field>
      <value>False</value>
    </record>
    <record name="nsw_brand_accent">
      <field type="plone.registry.field.ASCIILine">
        <title>NSW Brand accent colour</title>
        <description>Set the accent colour</description>
        <required>False</required>
      </field>
      <value>False</value>
    </record>
    <record name="nsw_brand_supplementary">
      <field type="plone.registry.field.ASCIILine">
        <title>NSW Brand supplementary colour</title>
        <description>Set the supplementary colour</description>
        <required>False</required>
      </field>
      <value>False</value>
    </record>
  </records>



</registry>
